{
  "name": "aamva-id-maker",
  "version": "1.0.0",
  "description": "AAMVA-compliant ID/Driver License generator following DL/ID Card Design Standard 2025 v1.0",
  "main": "app/electron-main.js",
  "homepage": "./",
  "bin": {
    "aamva-id-maker": "./src/main.js"
  },
  "scripts": {
    "start": "node src/main.js",
    "gui": "electron .",
    "gui:dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "node src/main.js --validate-only",
    "interactive": "node src/main.js --interactive",
    "generate:dl": "node src/main.js --template dl --format horizontal",
    "generate:id": "node src/main.js --template id --format horizontal",
    "generate:vertical": "node src/main.js --template dl --format vertical",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "aamva",
    "driver-license",
    "identification",
    "id-card",
    "pdf417",
    "barcode",
    "security",
    "government",
    "real-id"
  ],
  "author": "ID Maker Development Team",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "date-fns": "^2.30.0",
    "uuid": "^9.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "@eslint/js": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-node": "^11.1.0",
    "supertest": "^6.3.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/aamva-id-maker.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/aamva-id-maker/issues"
  },
  "homepage": "https://github.com/your-username/aamva-id-maker#readme",
  "build": {
    "appId": "com.idmaker.aamva",
    "productName": "AAMVA ID Maker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "src/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "app/assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
